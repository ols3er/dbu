! xscreensaver ---------------------------------------------------------------

!font settings
xscreensaver.Dialog.font:		-*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.headingFont:        -*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #DDDDDD
xscreensaver.Dialog.background:         #111111
xscreensaver.Dialog.topShadowColor:     #222222
xscreensaver.Dialog.bottomShadowColor:  #222222
xscreensaver.Dialog.Button.foreground:  #FFFFFF
xscreensaver.Dialog.Button.background:  #444444
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #FFFFFF
xscreensaver.Dialog.text.background:    #000000
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        20
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #FFFFFF
xscreensaver.passwd.thermometer.background:  #111111
xscreensaver.passwd.thermometer.width:       20
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %H:%M %A %d %B  %Y
